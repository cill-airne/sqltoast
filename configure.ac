AC_INIT([sqltoast],[0.1],[https://bugs.launchpad.net/sqltoast])
AC_CONFIG_SRCDIR([sqltoast/parse.h])
AC_CONFIG_AUX_DIR(config)
AC_CONFIG_MACRO_DIR([m4])

PANDORA_CANONICAL_TARGET(require-cxx, warnings-always-on)

# Increment if interfaces have been added, removed, or changed.
LIBSQLTOAST_VERSION_CURRENT=0

# Increment if source code has changed, set to zero if current is incremented.
LIBSQLTOAST_VERSION_REVISION=0

# Increment if interfaces have been added, set to zero if interfaces have been
# removed or changed.
LIBSQLTOAST_VERSION_AGE=0

AC_SUBST(LIBSQLTOAST_VERSION_CURRENT)
AC_SUBST(LIBSQLTOAST_VERSION_REVISION)
AC_SUBST(LIBSQLTOAST_VERSION_AGE)

AC_DEFINE_UNQUOTED([LIBSQLTOAST_VERSION_CURRENT],
                   [$LIBSQLTOAST_VERSION_CURRENT],
                   [Current portion of libsqltoast version])
AC_DEFINE_UNQUOTED([LIBSQLTOAST_VERSION_REVISION],
                   [$LIBSQLTOAST_VERSION_REVISION],
                   [Revision portion of libsqltoast version])
AC_DEFINE_UNQUOTED([LIBSQLTOAST_VERSION_AGE],
                   [$LIBSQLTOAST_VERSION_AGE],
                   [Age portion of libsqltoast version])

LIBSQLTOAST_VERSION=$LIBSQLTOAST_VERSION_CURRENT:$LIBSQLTOAST_VERSION_REVISION:$LIBSQLTOAST_VERSION_AGE

AC_SUBST(LIBSQLTOAST_VERSION)

AC_LANG_PUSH(C++)
PANDORA_REQUIRE_PTHREAD
PANDORA_REQUIRE_LIBDL
PANDORA_HAVE_LIBGTEST
PANDORA_HAVE_BOOST
AC_LANG_POP

PANDORA_PLUGINS

AC_DEFINE_UNQUOTED([SQLTOAST_MODULE_EXT], ["$acl_cv_shlibext"],
                   [Extension to use for modules.])

AC_CONFIG_FILES(Makefile docs/header.html)

AC_OUTPUT

echo "---"
echo "Configuration summary for $PACKAGE_NAME version $VERSION"
echo ""
echo "   * Installation prefix:       $prefix"
echo "   * System type:               $host_vendor-$host_os"
echo "   * Host CPU:                  $host_cpu"
echo "   * C Compiler:                $CC_VERSION"
echo "   * Assertions enabled:        $ac_cv_assert"
echo "   * Debug enabled:             $with_debug"
echo "   * Profiling enabled:         $ac_profiling"
echo "   * Coverage enabled:          $ac_coverage"
echo "   * Warnings as errors:        $ac_cv_warnings_as_errors"
echo "   * Configured modules:"
echo ""

for module in `echo $PANDORA_PLUGIN_LIST | sed 's/_/::/g' | tr ',' '\n' | sort`
do
  echo "     - $module"
done

echo ""
echo "---"
