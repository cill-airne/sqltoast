# Add a datetime term to an interval term
>SELECT a AT LOCAL + b YEAR TO MONTH FROM t1
statements:
  - type: SELECT
    select_statement:
      query:
        selected_columns:
          - type: DATETIME_EXPRESSION
            datetime_expression:
              left:
                factor:
                  time_zone: LOCAL
                  primary:
                    type: VALUE
                    value:
                      primary:
                        type: COLUMN_REFERENCE
                        column_reference: a
              op: ADD
              right:
                left:
                  primary:
                    value: column-reference[b]
                    qualifier:
                      start:
                        interval: YEAR
                      end:
                        interval: MONTH
        referenced_tables:
          - type: TABLE
            table:
              name: t1
