# character string literal value expression primary
>SELECT 'a' FROM t1
statements:
  - type: SELECT
    select_statement:
      query:
        selected_columns:
          - type: NUMERIC_EXPRESSION
            numeric_expression:
              left:
                left:
                  primary:
                    type: VALUE
                    value:
                      primary:
                        type: UNSIGNED_VALUE_SPECIFICATION
                        unsigned_value_specification: literal['a']
        referenced_tables:
          - type: TABLE
            table:
              name: t1
