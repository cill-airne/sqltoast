  - type: SELECT
    query:
      selected_columns:
        - derived_column:
            value_expression:
              type: STRING_EXPRESSION
              character_expression:
                factors:
                  - primary: literal['ß']
                    collation: utf8mb4_general_ci
      referenced_tables:
        - t1
