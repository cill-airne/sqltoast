# character string literal value expression primary
>SELECT 'a' FROM t1
statements:
  - type: SELECT
    select_statement:
      query:
        selected_columns:
          - derived_column:
              value_expression:
                type: NUMERIC_EXPRESSION
                numeric_expression:
                  term:
                    left:
                      factor:
                        primary:
                          type: VALUE
                          value: literal['a']
        referenced_tables:
          - type: TABLE
            table:
              name: t1
