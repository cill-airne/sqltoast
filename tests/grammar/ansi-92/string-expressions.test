# A simple scalar subquery
>SELECT (SELECT b FROM t2) FROM t1
statements:
  - type: SELECT
    select_statement:
      query:
        selected_columns:
          - type: NUMERIC_EXPRESSION
            numeric_expression:
              left:
                left:
                  primary:
                    type: VALUE
                    value:
                      primary:
                        type: SCALAR_SUBQUERY
                        scalar_subquery: query[selected-columns[column-reference[b]] table-expression[referenced-tables[t2]]
        referenced_tables:
          - type: TABLE
            table:
              name: t1
