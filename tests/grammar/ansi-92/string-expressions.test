# SUBSTRING string function with no for length modifier
>SELECT SUBSTRING(a FROM 1) FROM t1
statements:
  - type: SELECT
    select_statement:
      query:
        selected_columns:
          - type: STRING_EXPRESSION
            string_expression:
              factors:
                - primary:
                    function:
                      type: SUBSTRING
                      operand:
                        factors:
                          - primary:
                              value:
                                type: COLUMN_REFERENCE
                                column_reference: a
                      start_position:
                        left:
                          left:
                            primary:
                              type: VALUE
                              value:
                                primary:
                                  type: UNSIGNED_VALUE_SPECIFICATION
                                  unsigned_value_specification: literal[1]
        referenced_tables:
          - type: TABLE
            table:
              name: t1
