# unsigned literal number value expression primary
>SELECT 1 FROM t1
statements:
  - type: SELECT
    selected_columns:
      - literal[1]
    referenced_tables:
      - t1
# Simple addition of literal number to column reference
>UPDATE t1 SET x = 1 WHERE a = (2 + b)
statements:
  - type: UPDATE
    table_name: t1
    set_columns:
      x: literal[1]
    where:
      search_condition:
        terms:
          - factor:
              predicate:
                type: COMPARISON
                op: EQUAL
                left:
                  row_value_constructor:
                    type: ELEMENT
                    element:
                      type: VALUE_EXPRESSION
                      value_expression:
                        type: NUMERIC_EXPRESSION
                        numeric_expression:
                          term:
                            left:
                              factor:
                                primary: column-reference[a]
                right:
                  row_value_constructor:
                    type: ELEMENT
                    element:
                      type: VALUE_EXPRESSION
                      value_expression:
                        type: NUMERIC_EXPRESSION
                        numeric_expression:
                          term:
                            left:
                              factor:
                                primary: (numeric-expression[literal[2] + column-reference[b]])
