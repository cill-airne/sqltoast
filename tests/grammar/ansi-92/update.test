# UPDATE with no WHERE condition
>UPDATE t1 SET a = 1
statements:
  - type: UPDATE
    table_name: t1
    set_columns:
      a: literal[1]
# UPDATE with simple WHERE condition with equality comparison
>UPDATE t1 SET a = 1 WHERE b = 2
statements:
  - type: UPDATE
    table_name: t1
    set_columns:
      a: literal[1]
    where:
      search_condition:
        terms:
          - factor:
              predicate:
                type: COMPARISON
                op: EQUAL
                left:
                  row_value_constructor:
                    type: ELEMENT
                    element:
                      type: VALUE_EXPRESSION
                      value_expression:
                        type: NUMERIC_EXPRESSION
                        numeric_expression:
                          term:
                            left:
                              factor:
                                primary:
                                  type: VALUE
                                  value: column-reference[b]
                right:
                  row_value_constructor:
                    type: ELEMENT
                    element:
                      type: VALUE_EXPRESSION
                      value_expression:
                        type: NUMERIC_EXPRESSION
                        numeric_expression:
                          term:
                            left:
                              factor:
                                primary:
                                  type: VALUE
                                  value: literal[2]
